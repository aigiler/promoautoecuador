<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_asamblea_tree" model= "ir.ui.view">
        <field name="name">view.asamblea.tree</field>
        <field name="model">asamblea</field>
        <field name="arch" type="xml">
            <tree string="Asamblea"  >
                <field name="secuencia" />
                <field name="name" />
                <field name="descripcion" />
                <field name="estado" />
                <field name="active" />
            </tree>
        </field>
    </record>

    
    <record id="view_asamblea_form" model= "ir.ui.view">
        <field name="name">view.asamblea.form</field>
        <field name="model">asamblea</field>
        <field name="arch" type="xml">
            <form string="Asamblea">
                <header>
                    <field name="estado" widget="statusbar" statusbar_visible="borrador,en_curso,seleccion_part,cerrado"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" class="oe_inline"/></h1>
                    </div>
                    <group>
                        <group colspan="4" col="2">
                            <field name="secuencia" readonly="1" />
                            <field name="descripcion" />
                            <field name="grupo_id" required="1"/>
                        </group>

                        <group colspan="4" col="2">
                            <field name="fecha_inicio" required="1"/>
                            <field name="fecha_fin" required="1"/>
                            <field name="active" />
                        </group>
                    </group>
                    <group>
                        <group string="Integrantes de la Asamblea">
                            <field name="integrantes" nolabel="1">
                                <tree string="Integrantes" edit="false" create="false">
                                    <field name="asamblea_id" invisible="1"/>
                                    <field name="adjudicado_id" />
                                    <field name="descripcion"/>
                                    <field name="monto"/>
                                    <field name="es_ganador"/>
                                </tree>
                            </field>
                        </group> 
                        <group string="Junta">
                            <field name="junta" nolabel="1" >
                                <tree string="Junta" >
                                    <field name="name"/>
                                    <field name="department_id"/>
                                </tree>
                            </field>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="action_asamblea" model="ir.actions.act_window">
        <field name="name">Asamblea</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">asamblea</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>


     <menuitem id="menu_asamblea" action="action_asamblea" 
        parent="menu_adjudicados" sequence="6"  />


</odoo>