<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="view_entrega_vehiculo_tree" model= "ir.ui.view">
        <field name="name">view.entrega.vehiculo.tree</field>
        <field name="model">entrega.vehiculo</field>
        <field name="arch" type="xml">
            <tree string="Entrega Vehiculo"  >
                <field name="secuencia" />
                <field name="state" />
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_entrega_vehiculo_form" model="ir.ui.view">
        <field name="name">view.entrega.vehiculo.form</field>
        <field name="model">entrega.vehiculo</field>
        <field name="arch" type="xml">
            <form string="Entrega Vehiculo">
                <header>
                   <button name="cambio_estado_boton_enviar" string="Enviar" type="object" 
                        states="requerimiento" class="oe_highlight"/>
                    <button name="cambio_estado_boton_solicitar" string="Solicitar"
                        states="solicitar_documento" type="object"  class="oe_highlight"/>
                    <button name="cambio_estado_boton_aprobar" string="Aprobar" type="object" 
                    states="entrega_documentos" class="oe_highlight"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="secuencia" class="oe_inline" readonly="1"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="archivo" filename="name"/> 
                            <field name="active"  />
                        </group>
                    </group>
                </sheet>     
            </form > 
        </field>
    </record>


    <record id="action_new_entrega_vehiculo_form" model="ir.actions.act_window">
        <field name="name">Entrega Vehiculo</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">entrega.vehiculo</field>
        <field name="view_mode">tree,form</field>
    </record>
        

    <menuitem id="menu_new_entrega_vehiculo" action="action_new_entrega_vehiculo_form" 
        parent="menu_adjudicados" sequence="7"  />
</odoo>