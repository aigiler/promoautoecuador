<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="view_entrega_vehiculo_tree" model= "ir.ui.view">
        <field name="name">view.entrega.vehiculo.tree</field>
        <field name="model">entrega.vehiculo</field>
        <field name="arch" type="xml">
            <tree string="Entrega Vehiculo">
                <field name="secuencia" />
                <field name="state" />
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_entrega_vehiculo_form" model="ir.ui.view">
        <field name="name">view.entrega.vehiculo.form</field>
        <field name="model">entrega.vehiculo</field>
        <field name="arch" type="xml">
            <form string="Entrega Vehiculo">
                <header>
                    <button name="cambio_estado_boton_borrador" string="Borrador" type="object" states="borrador" class="oe_highlight"/>
                    <button name="cambio_estado_boton_revision" string="Revisión documentos" states="revision_documentos" type="object" class="oe_highlight"/>
                    <button name="cambio_estado_boton_informe" string="Informe de Crédito y Cobranza" type="object" states="informe_credito_cobranza" class="oe_highlight"/>
                    <button name="cambio_estado_boton_caificador" string="Calificador para compra del bien" type="object" states="calificador_compra" class="oe_highlight"/>
                    <button name="cambio_estado_boton_liquidacion" string="Liquidación de compra y orden de compra" type="object" states="liquidacion_orden_compra" class="oe_highlight"/>
                    <button name="cambio_estado_boton_entrega" string="Entrega de Vehiculo" type="object" states="entrega_vehiculo" class="oe_highlight"/>
                    <field name="state" widget="statusbar"/>
                </header>

                <!-- sheet principal-->
                <sheet>
                    <!-- div state borrador -->
                    <div states="borrador, revision_documentos" class="row">
                        <div class="col-xs-4">
                            <separator string="REQUISITOS Y POLÍTICAS PARA APLICAR CRÉDITO"/>
                            <group>
                                <field name="documentos" widget="many2many_binary"/>
                                <field name="active" attrs = "{'invisible': 1}" />
                            </group>
                        </div>
                    </div>
                    <!-- FIN div state borrador -->

                    <div states="informe_credito_cobranza">
                        <separator class="text-center" string="ANTECEDENTES DEL ASOCIADO"/>
                        <div class="row">
                            <div class="col-xs-12 col-md-12">
                                <group>
                                    <field name="nombreSocioAdjudicado" options="{'no_create': True, 'no_open': True}"/>
                                </group>
                            </div>
                            <div class="col-xs-12 col-sm-4">
                                <group>
                                    <field name="vatAdjudicado" options="{'no_create': True, 'no_open': True}"/>
                                    <field name="fechaNacimientoAdj" options="{'no_create': True, 'no_open': True}"/>
                                    <field name="estadoCivilAdj" options="{'no_create': True, 'no_open': True}"/>
                                </group>
                            </div>
                            <div class="col-xs-4">
                                <group>
                                    <field name="codigoAdjudicado" options="{'no_create': True, 'no_open': True}"/>
                                    <field name="edadAdjudicado" string="Edad"/>
                                    <field name="cargasFamiliares" />
                                </group>
                            </div>
                        </div>
                        <separator class="text-center" string="DATOS DEL CONYUGE"/>
                        <div class="row">
                            <div class="col-xs-12 col-md-12">
                                <group>
                                    <field name="nombreConyuge" string="Nombre del Cónyuge"/>
                                </group>
                            </div>
                            <div class="col-xs-12 col-sm-4">
                                <group>
                                    <field name="vatConyuge" string="Cedula de Ciudadanía"/>
                                    <field name="estadoCivilConyuge" string="Estado Civil"/>
                                </group>
                            </div>
                            <div class="col-xs-4">
                                <group>
                                    <field name="fechaNacimientoConyuge" string="Fecha de Nacimiento"/>
                                    <field name="edadConyuge" options="{'no_create': True, 'no_open': True}"/>
                                </group>
                            </div>
                        </div>
                        <separator class="text-center" string="DATOS DOMICIARIOS"/>
                        <div class="row">
                            <field name="referenciaDomiciliaria" widget="pad" string='Referencias indican:'/>
                        </div>
                        <separator class="text-center" string="DATOS LABORALES"/>
                        <div class="row">
                            <field name="referenciasLaborales" widget="pad" string='Referencias indican:'/>
                        </div>
                        <separator class="text-center" string="PATRIMONIO"/>
                        <div class="row">
                            <div class="col-xs-12 col-sm-4">
                                <group>
                                    <field name="montoAhorroInversiones" widget="monetary"/>
                                    <field name="casaValor" options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                    <field name="terrenoValor" widget="monetary"/>
                                    <field name="montoMueblesEnseres" widget="monetary"/>
                                    <field name="vehiculoValor" widget="monetary"/>
                                    <field name="inventarios" widget="monetary"/>
                                </group>
                            </div>
                            <div class="col-xs-4">
                                <group>
                                    <field name="institucionFinanciera"/>
                                    <field name="direccion"/>
                                    <field name="direccion1"/>
                                    <field name="placa"/>
                                    <field name="direccion"/>
                                </group>
                            </div>
                            <div class="col-xs-12 col-md-12">
                                <group>
                                    <field name="totalActivosAdj" string="TOTAL ACTIVOS" widget="monetary"/>
                                </group>
                            </div>
                        </div>

                        <separator class="text-center" string="REVISION EN PAGINAS DE CONTROL"/>
                        <div class="row">
                            <div class="col-xs-12 col-sm-4">
                                <group>
                                    <field name="scoreBuroCredito" string="Buró de Crédito" />
                                    <field name="poseeAntecedentesPenales" string="Policía Nacional antecedentes"/>
                                    <field name="estadoTributario" string="SRI, deudas firmes y estado Tributario"/>
                                    <field name="funcionJudicial" string="Función Judicial"/>
                                    <field name="fiscaliaGeneral" string="Fiscalia General del Estado"/>
                                </group>
                            </div>
                            <div class="col-xs-4">
                                <group>
                                    <field name="scoreBuroCredito"/>
                                    <field name="posee" />
                                    <field name="posee"/>
                                    <field name="posee"/>
                                    <field name="posee"/>
                                </group>
                            </div>
                        </div>
                        <separator class="text-center" string="OBSERVACIONES"/>
                        <div class="row">
                            <field name="observaciones" widget="pad" string='Referencias indican:'/>
                        </div>
                        <separator class="text-center" string="COMITÉ DE APROBACION"/>
                        <div class="row">
                        </div>

                    </div>
                    <!-- calificador_compra -->
                    <div states="calificador_compra">
                        <separator class="text-center" string="CALIFICADOR PARA COMPRA DEL BIEN"/>
                        <div class="row">
                            <div class="col-xs-12 col-md-12">
                                <group>
                                    <field name="nombreSocioAdjudicado" options="{'no_create': True, 'no_open': True}"/>
                                </group>
                            </div>
                            <div class="col-xs-12 col-sm-4">
                                <group>
                                    <field name="vatAdjudicado" options="{'no_create': True, 'no_open': True}"/>
                                </group>
                            </div>
                            <div class="col-xs-4">
                                <group>
                                    <field name="codigoAdjudicado" options="{'no_create': True, 'no_open': True}"/>
                                </group>
                            </div>
                        </div>
                        <separator/>
                        <div class="row">
                            <div class="col-xs-4 col-sm-3">
                                <group>
                                    <field name="montoAdjudicado" options="{'no_create': True, 'no_open': True}"/>
                                    <field name="valorCuota" options="{'no_create': True, 'no_open': True}"/>
                                </group>
                            </div>
                            <div class="col-xs-4 col-sm-4">
                                <group>
                                    <label for="plazoMeses" string="Plazo"/>
                                    <label for="tipoAdj" string="Tipo Adj."/>
                                    <field name="plazoMeses" nolabel="1" />
                                    <field name="tipoAdj" nolabel="1" />
                                </group>
                            </div>
                            <div class="col-xs-4 col-sm-4">
                                <group>
                                    <label for="fechaAdj" string="Fecha de Adj."/>
                                    <field name="fechaAdj" nolabel="1" />
                                </group>
                            </div>
                        </div>
                        <div class="row" style="border: 1px solid black;">
                            <div class="col-xs-12 col-sm-4">
                                <group>
                                    <field name="valorTotalPlan" options="{'no_create': True, 'no_open': True}"/>
                                    <field name="montoCuotasCanceladas" options="{'no_create': True, 'no_open': True}"/>
                                    <field name="montoCuotasPendientes" options="{'no_create': True, 'no_open': True}"/>
                                </group>
                            </div>
                            <div class="col-xs-12 col-sm-4">
                                <group>
                                    <field name="plazoMeses" nolabel="1" options="{'no_create': True, 'no_open': True}"/>
                                    <field name="porcentajeTotal" nolabel="1" options="{'no_create': True, 'no_open': True}"/>
                                    <field name="cuotasCanceladas" nolabel="1" options="{'no_create': True, 'no_open': True}"/>
                                    <field name="porcentajeCancelado" nolabel="1" options="{'no_create': True, 'no_open': True}"/>
                                </group>
                            </div>
                            <div class="col-xs-12 col-sm-4" style="border: 0.05px solid black;">
                                <group>
                                    <field name="puntosPorcentajeCancelado" nolabel="1" options="{'no_create': True, 'no_open': True}"/>
                                </group>
                            </div>
                        </div>
                        <separator/>
                        <div class="row" style="border: 1px solid black;">
                            <div class="col-xs-12 col-sm-4">
                                <group>
                                    <field name="valorDelBien" options="{'no_create': True, 'no_open': True}"/>
                                    <field name="saldoPlan" options="{'no_create': True, 'no_open': True}"/>
                                </group>
                            </div>
                            <div class="col-xs-12 col-sm-4">
                                <group>
                                    <text></text>
                                    <field name="porcentajeSaldoPlan" nolabel="1" options="{'no_create': True, 'no_open': True}"/>
                                </group>
                            </div>
                            <div class="col-xs-12 col-sm-4" style="border: 0.05px solid black;">
                                <group>
                                    <field name="puntosPorcentajSaldos" nolabel="1" options="{'no_create': True, 'no_open': True}"/>
                                </group>
                            </div>
                        </div>
                        <separator/>
                        <div class="row" style="border: 1px solid black;">
                            <div class="col-xs-12 col-sm-4">
                                <group>
                                    <field name="ingresosFamiliares" />
                                    <field name="gastosFamiliares" options="{'no_create': True, 'no_open': True}"/>
                                    <field name="disponibilidad" options="{'no_create': True, 'no_open': True}"/>
                                </group>
                            </div>
                            <div class="col-xs-12 col-sm-4" colspan="4">
                                <group>
                                    <field name="porcentajeIngresos" nolabel="1" options="{'no_create': True, 'no_open': True}"/>
                                    <field name="porcentajeGastos" nolabel="1" options="{'no_create': True, 'no_open': True}"/>
                                    <field name="porcentajeDisponibilidad" nolabel="1" options="{'no_create': True, 'no_open': True}"/>
                                    <text>Comprometido</text>
                                    <text>Cuota Plan</text>
                                    <field name="porcentajeCuotaPlan" nolabel="1" options="{'no_create': True, 'no_open': True}"/>
                                </group>
                            </div>
                            <div class="col-xs-12 col-sm-4" style="border: 0.05px solid black;">
                                <group>
                                    <field name="puntosPorcentajeCancelado" nolabel="1" options="{'no_create': True, 'no_open': True}"/>
                                </group>
                            </div>
                        </div>
                        <separator/>
                        <div class="row" style="border: 1px solid black;">
                            <div class="col-xs-12 col-sm-8">
                                <field name="scoreCredito" string="Score de Credito Mayor a 800 puntos" />
                            </div>
                            <div class="col-xs-12 col-sm-4" style="border: 0.05px solid black;">
                                <group>
                                    <field name="puntosScoreCredito" nolabel="1" options="{'no_create': True, 'no_open': True}"/>
                                </group>
                            </div>
                        </div>
                        <separator/>
                        <div class="row" style="border: 1px solid black;">
                            <div class="col-xs-12 col-sm-4">
                                <text>Posee Bienes</text>
                            </div>
                            <div class="col-xs-12 col-sm-4">
                                <text>Si/No</text>
                            </div>
                            <div class="col-xs-12 col-sm-4">
                                <text>Ptos.</text>
                            </div>
                            <div class="col-xs-12 col-sm-4" style="border: 0.05px solid black;">
                                <group>
                                    <field name="puntosScoreCredito" nolabel="1" options="{'no_create': True, 'no_open': True}"/>
                                </group>
                            </div>
                        </div>






                    </div>
                </sheet>
            </form >
        </field>
    </record>


    <record id="action_new_entrega_vehiculo_form" model="ir.actions.act_window">
        <field name="name">Entrega Vehiculo</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">entrega.vehiculo</field>
        <field name="view_mode">tree,form</field>
    </record>


    <menuitem id="menu_new_entrega_vehiculo" action="action_new_entrega_vehiculo_form" parent="menu_adjudicados" sequence="7" />
</odoo>