<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="view_new_entrega_vehiculo_tree" model= "ir.ui.view">
        <field name="name">view.entrega.vehiculo.tree</field>
        <field name="model">entrega.vehiculo</field>
        <field name="arch" type="xml">
            <tree string="Entrega Vehiculo"  >
                <field name="secuencia" />
                <field name="descripcion" />
                <field name="estado" />
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_entrega_vehiculo_form" model="ir.ui.view">
        <field name="name">view.entrega.vehiculo.form</field>
        <field name="model">entrega.vehiculo</field>
        <field name="arch" type="xml">
            <form string="Entrega Vehiculo">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="borrador,revision_documentos,informe_credito_cobranza,calificador_compra,liquidacion_orden_compra,entrega_vehiculo"/>
                </header>

                <sheet>
                    <div class="oe_title">
                        <h1><field name="secuencia" class="oe_inline" readonly="1"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="descripcion" attrs="{'readonly': [('state', '=', 'cerrado')]}"/>
                            <field name="fecha_inicio" attrs="{'readonly': [('state', '=', 'cerrado')]}"/>
                            <field name="fecha_fin" attrs="{'readonly': [('state', '=', 'cerrado')]}"/>
                            <field name="active"  />
                        </group>
                    </group>
                </sheet>   
            </form > 
        </field>
    </record>


    <record id="action_new_entrega_vehiculo_form" model="ir.actions.act_window">
        <field name="name">Asamblea</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">entrega.vehiculo</field>
        <field name="view_mode">tree,form</field>
    </record>
        

    <menuitem id="menu_new_entrega_vehiculo" action="action_new_entrega_vehiculo_form" 
        parent="menu_adjudicados" sequence="7"  />
</odoo>