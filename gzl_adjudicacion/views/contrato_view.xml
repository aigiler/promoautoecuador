<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_contrato_tree" model= "ir.ui.view">
        <field name="name">view.contrato.tree</field>
        <field name="model">contrato</field>
        <field name="arch" type="xml">
            <tree string="Contrato">
                <field name="secuencia" />
                <field name="cliente" />
                <field name="grupo" />
                <field name="tipo_de_contrato"/>
                <field name="active"/>
            </tree>
        </field>
    </record>


    <record id="view_contrato_form" model= "ir.ui.view">
        <field name="name">view.contrato.form</field>
        <field name="model">contrato</field>
        <field name="arch" type="xml">
            <form string="Contrato">
                <header>
                    <button name="cambio_estado_boton_borrador" string="Borrador" type="object" states="borrador" class="oe_highlight"/>
                    <button name="cambio_estado_congelar_contrato" string="Congelar Contrato" states="congelar_contrato" type="object" class="oe_highlight"/>
                    <button name="cambio_estado_boton_adendum" string="Adjudicar" type="object" states="adjudicar" class="oe_highlight"/>
                    <button name="cambio_estado_boton_desistir" string="Cerrado" type="object" states="adendum" class="oe_highlight"/>
                    
                    <button name="detalle_tabla_amortizacion" string="Generar Contrato" type="object" class="oe_highlight"/>

                    <field name="state" widget="statusbar" statusbar_visible="borrador,congelar_contrato,adjudicar,adendum,desistir"/>
                </header>

                <sheet>
                    <div states="borrador,congelar_contrato,adjudicar,adendum,desistir">
                        <div class="oe_title">
                            <h1>
                                <field name="secuencia" class="oe_inline" readonly="1"/>
                            </h1>
                        </div>
                        <div class="row">
                            <group string="InformaciÃ³n del Contrato"/>
                            <div class="col-xs-12 col-sm-4">
                                <group>
                                    <field name="cliente" options="{'no_create': True, 'no_open': True}"/>
                                    <field name="grupo" options="{'no_create': True, 'no_open': True}"/>
                                    <field name="dia_corte" readonly="1"/>
                                    <field name="saldo_a_favor_de_capital_por_adendum" />
                                    <field name="pago" />
                                    <field name="monto_financiamiento"/>
                                    <field name="tasa_administrativa"/>
                                    <field name="valor_inscripcion" />
                                </group>
                            </div>

                            <div class="col-xs-12 col-sm-4">
                                <group>
                                    <field name="tipo_de_contrato" options="{'no_create': True, 'no_open': True}" />
                                    <field name="codigo_grupo" />
                                    <field name="provincias" options="{'no_create': True, 'no_open': True}"/>
                                    <field name="archivo" filename="name"/>
                                    <field name="fecha_contrato" />
                                    <field name="plazo_meses" />
                                    <field name="cuota_adm"/>
                                    <field name="factura_inscripcion" options="{'no_create': True, 'no_open': True}"/>
                                </group>
                            </div>

                            <div class="col-xs-12 col-sm-4">
                                <group>
                                    <field name="active" />
                                    <field name="observacion"/>
                                    <field name="ciudad" options="{'no_create': True, 'no_open': True}"/>
                                    <field name="archivo_adicional" filename="name"/>
                                    <field name="fecha_inicio_pago" />
                                    <field name="cuota_capital"/>
                                    <field name="iva_administrativo" />
                                </group>
                            </div>

                        </div>

                        <group string="Estado de Cuenta de Aportes">
                            <field name="estado_de_cuenta_ids" nolabel="1">
                                <tree string="Estado de Cuenta" edit="false">
                                    <field name="contrato_id" invisible="1"/>
                                    <field name="numero_cuota"/>
                                    <field name="fecha"/>
                                    <field name="fecha_pagada"/>
                                    <field name="cuota_capital" sum="cuota_capital"/>
                                    <field name="cuota_adm" sum="cuota_adm"/>
                                    <field name="factura_id"/>
                                    <!-- <field name="pago_ids" widget="many2many_tags" /> -->
                                    <field name="seguro" sum="seguro"/>
                                    <field name="rastreo" sum="rastreo"/>
                                    <field name="otro" sum="otro"/>
                                    <field name="monto_pagado" sum="monto_pagado"/>
                                    <field name="saldo" sum="saldo"/>
                                    <field name="certificado"/>
                                    <field name="estado_pago" invisible="1"/>
                                </tree>
                            </field>
                        </group>
                    </div>
                </sheet>
                <!-- Attachment preview -->
                <div class="o_attachment_preview" />
                <!-- Chatter -->
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>

                
            </form>
        </field>
    </record>

    <record id="action_contrato" model="ir.actions.act_window">
        <field name="name">Contrato</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">contrato</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_contrato" action="action_contrato" parent="menu_adjudicados" sequence="7" />

</odoo>