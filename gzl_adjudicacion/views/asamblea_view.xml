<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="view_new_asamblea_tree" model= "ir.ui.view">
        <field name="name">view.new.asamblea.tree</field>
        <field name="model">asamblea</field>
        <field name="arch" type="xml">
            <tree string="Asamblea">
                <field name="secuencia" />
                <field name="tipo_asamblea"/>
                <field name="descripcion" />
                <field name="state" />
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_new_asamblea_form" model="ir.ui.view">
        <field name="name">view.new.asamblea.form</field>
        <field name="model">asamblea</field>
        <field name="arch" type="xml">
            <form string="Asamblea">
                <header>
                    <button name="cambio_estado_boton_precierre" string="Pre cierre" type="object" states="inicio" class="oe_highlight"/>
                    <button name="cambio_estado_boton_cerrado" string="Cerrado" type="object" states="pre_cierre"   class="oe_highlight"/>
                    <button name="obtener_integrantes" string="Integrantes" type="object"    class="oe_highlight"/>


                    <field name="state" widget="statusbar" statusbar_visible="inicio,pre_cierre,cerrado"/>
                </header>

                <sheet>
                    <div states="borrador,inicio,en_curso,pre_cierre,cerrado">
                        <div class="oe_title">
                            <h1>
                                <field name="secuencia" class="oe_inline" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="grupo_cliente" invisible="0"/>

                                <field name="descripcion"  attrs="{'readonly': [('state', '=', 'cerrado')]}"/>
                                <field name="fecha_inicio" required="1" attrs="{'readonly': [('state', '=', 'cerrado')]}"/>
                                <field name="fecha_fin" required="1" attrs="{'readonly': [('state', '=', 'cerrado')]}"/>
                                <field name="active" invisible="1 "/>
                                <field name="recuperacionCartera" invisible="0"/>
                                <field name="adjudicados" invisible="0"/>
                                <field name="fondos_mes" invisible="0"/>
                                
                                <field name="invertir_licitacion" invisible="0"/>
                                <field name="evaluacion" invisible="0"/>
                                <field name="programo" invisible="0"/>
                                <field name="licitaciones" invisible="0"/>
                                <field name="saldo" invisible="0"/>



                                


                                









                            </group>
                        </group>




                         <notebook>
                        <page string="LICITACIÓN" >
                        <separator class="text-center" string="LICITACIÓN"/>
                            <group>
                                <field name="integrantes_licitacion_id" nolabel="1" attrs="{'readonly': [('state', '=', 'cerrado')]}">
                                    <tree string="Licitación" editable="top">
                                        <field name="grupo_cliente" invisible="0"/>
                                        <field name="contrato_id" invisible="0"/>
                                        <field name="tipo_asamblea" invisible="0"/>
                                        <field name="adjudicado_id" invisible="0"/>
                                        <field name="plazo_meses" invisible="0"/>
                                         <field name="cuota" invisible="0"/>
                                        <field name="monto_financiamiento" invisible="0"/>
                                        <field name="licitacion_valor" invisible="0"/>
                                        <field name="cuotas_licitadas" invisible="0"/>
                                        <field name="cuotas_pagadas" invisible="0"/>
                                        <field name="total_cuotas" invisible="0"/>
                                        <field name="cuota_capital" invisible="0"/>
                                        <field name="total_or" invisible="0"/>
                                        <field name="seleccionado" invisible="0"/>
                                        <field name="nota" invisible="0"/>

                                    </tree>
                                </field>
                            </group>
                            </page>

                        <page string="EVALUACIÓN" >
                        <separator class="text-center" string="EVALUACIÓN"/>

                            <group>
                                <field name="integrantes_evaluacion_id" nolabel="1" attrs="{'readonly': [('state', '=', 'cerrado')]}">
                                    <tree string="Evaluación" editable="top">
                                        <field name="grupo_cliente" invisible="0"/>
                                        <field name="contrato_id" invisible="0"/>
                                        <field name="adjudicado_id" invisible="0"/>
                                        <field name="monto_financiamiento" invisible="0"/>
                                        <field name="cuotas_pagadas" invisible="0"/>
                                        <field name="seleccionado" invisible="0"/>
                                        <field name="nota" invisible="0"/>

                                    

                                    </tree>
                                </field>
                            </group>
                            </page>


                         </notebook>














