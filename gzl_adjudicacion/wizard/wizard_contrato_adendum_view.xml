<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="wizard_crear_adendum_form" model="ir.ui.view">
        <field name="name">wizard.crear.adendum.form</field>
        <field name="model">wizard.contrato.adendum</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group string="Ingrese la modificaciÃ³n del contrato"> 


                        <field name="contrato_id" required="1"/>
                        <field name="socio_id" invisible="1"/>
                        <field name="monto_financiamiento" required="1"/>
                        <field name="plazo_meses" invisible="0"/>
                        <field name="observacion" invisible="0"/>

                        <field name="tabla_adendum_id" nolabel="1" >
                                    <tree string="Nuevo Estado de Cuneta" editable="top">
                                        <field name="numero_cuota" readonly="1"/>
                                        <field name="fecha" readonly="1"/>
                                        <field name="cuota_capital" readonly="1"/>
                                        <field name="cuota_adm" readonly="1"/>
                                        <field name="iva_adm" readonly="1"/>
                                        <field name="saldo" readonly="1"/>
                                        <field name="estado_pago" readonly="1"/>
                               

                                    

                                    </tree>
                                    </field>

                    </group>
                </sheet>
                <footer>
                    <button string="Ver Tabla" class="oe_highlight" type="object" name="validar_tabla"/>
                    <button string="Ejecutar Cambio" class="oe_highlight" type="object" name="ejecutar_cambio"/><!-- attrs="{'invisible': [('ejecutado', '=', True)]}"/-->
                    <button string="Cancelar" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>