<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="gzl_account_inherit_view_id_inherit_account" model="ir.ui.view">
        <field name="name">account.move.view.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="contrato_id" domain="[('cliente', '=', partner_id)]" attrs="{'invisible': [('type', '!=', 'out_invoice')]}"/>
                <field name="contrato_estado_cuenta_ids" widget="many2many_tags" domain="[('contrato_id','=',contrato_id),('estado_pago','=','pendiente')]" attrs="{'invisible': [('type', '!=', 'out_invoice')]}"/>
            </xpath>
        </field>
    </record>

</odoo>
