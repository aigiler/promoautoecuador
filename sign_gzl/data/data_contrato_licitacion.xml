<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">
<!-- Documento pdf - saas -->
    <record id="attachment_sign_saas" model="ir.attachment">
        <field name="name">Saas.pdf</field>
        <field name="datas" type="base64" file="sign_gzl/static/demo/saas.pdf"/>
