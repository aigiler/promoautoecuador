<odoo>
    <data>
        <template id="template_estado_de_cuenta_reporte">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page" style="font-size: 14px">
                    <div class="col-xs-6 text-right">
                        <img class="img-responsive" src="/lt_sales/static/src/img/logo.png" style="max-height: 50px;" />
                    </div>

                    <span><center><h3>PROMOAUTO ECUADOR PROMOAUTOECUADOR S.A</h3></center></span><br/><br/>
                    <table>
                        <tbody>
                            <tr>
                                <td colspan="2" style="text-align: left">AV. JUAN TANCA MARENGO Y 2DO CALLEJON PLAZA SAI BABA</td>
                                <td></td>
                            </tr>
                            <tr>
                                <td colspan="2" style = "width:100%; text-align: left">>GUAYAQUIL - Ecuador</td>
                                <!-- <td style = "width:20%; text-align: left"><span t-esc="o.contrato_id.ciudad.nombre_ciudad"/></td> -->
                            </tr>
                            <tr>
                                <td colspan="2" style="text-align: left">RUC: 0993261564001</td>
                                <td></td>
                            </tr>
                            <tr>
                                <td colspan="3"><span><center><h3>ESTADO DE CUENTA DE APORTES</h3></center></span></td>
                            </tr>
                            <tr>
                                <td colspan="2" style="text-align: left"><span>Cliente: </span> <span t-esc="o.contrato_id.cliente.name"/></td>
                                <td><span>Ced/RUC: </span> <span t-esc="o.contrato_id.cliente.vat"/></td>
                            </tr>
                            <tr>
                                <td colspan="2" style="text-align: left"><span>Grupo: </span><text>[</text><span t-esc="o.contrato_id.grupo.codigo"/><text>] </text><span t-esc="o.contrato_id.grupo.name"/></td>
                                <td><span>Tipo de contrato: </span> <span t-esc="o.contrato_id.tipo_de_contrato.name"/></td>
                            </tr>
                            <tr>
                                <td colspan="2" style="text-align: left"><span>Estado: </span>
                                <!-- t-if="user.birthday == today()" -->
                                <span t-esc="o.contrato_id.state"/></td>
                                <td></td>
                            </tr>
                            <tr>
                                <td style="text-align: left"><span>Valor Inscripci√≥n: </span><span t-esc="o.contrato_id.monto_financiamiento"/></td>
                                <td><span>Monto financiamiento: </span><span t-esc="o.contrato_id.plazo_meses.numero"/></td>
                                <td><span>Plazo: </span><span t-esc="o.contrato_id.monto_financiamiento"/><span> Meses</span></td>
                            </tr>
                        </tbody>
                    </table>
                    <br/><br/>
                    <table class="table table-condensed">
                    <thead style="text-align: center; margin-bottom: 10px ">
                        <th>CUOTA</th>
                        <th>FECHA PAGO</th>
                        <th>CUOTA CAPITAL</th>
                        <th>CUOTA ADM.</th>
                        <th>IVA</th>
                        <th>SEGURO</th>
                        <th>RASTREO</th>
                        <th>OTRO</th>
                        <th>SALDO</th>
                    </thead>
                    <tbody>
                    <tr t-foreach="o.contrato_id.estado_de_cuenta_ids" t-as="estado_cuenta">
                        <td><span t-esc="estado_cuenta.numero_cuota" /></td>
                        <td><span t-esc="estado_cuenta.fecha"  /></td>
                        <td><span t-esc="estado_cuenta.cuota_capital"   /></td>
                        <td><span t-esc="estado_cuenta.cuota_adm" /></td>
                        <td><span t-esc="estado_cuenta.iva_adm"  /></td>
                        <td><span t-esc="estado_cuenta.seguro"   /></td>
                        <td><span t-esc="estado_cuenta.rastreo"  /></td>
                        <td><span t-esc="estado_cuenta.otro"   /></td>
                        <td><span t-esc="estado_cuenta.saldo"  /></td>
                    </tr>
                    </tbody>
                    </table>
                    </div>
                </t>
            </t>
        </t>
        </template>
    </data>
</odoo>