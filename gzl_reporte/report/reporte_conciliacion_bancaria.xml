<?xml version="1.0" encoding="UTF-8"?>
<odoo>
        <report
          id="bank_statement_report"
          model="bank.statement.report"
          string="Reporte de Conciliacion Bancaria"
          report_type="qweb-pdf"
          name="gzl_reporte.template_bank_statement_report"
          file="gzl_reporte.template_bank_statement_report"
          menu="False"
          attachment_use="False"
          attachment="('Conciliacion_Bancaria.pdf')"
        />

        <record id="bank_statement_report_form" model="ir.ui.view">
            <field name="name">Reporte de Concilacion Bancaria</field>
            <field name="model">bank.statement.report</field>
            <field name="arch" type="xml">
            <form>
                <sheet>
                    <group col="4" colspan="2">
                        <field name="journal_id" required="1" options="{'no_create':True, 'no_open':True}" />
                        <field name="date" required="1" />
                    </group>
                </sheet>
                <footer>
                    <button name="print_report" string="Imprimir Pdf" type="object" context="{'date': date}" class="btn btn-primary"/>
                    <button name="print_report_xls" string="Imprimir Excel" type="object" context="{'date': date}" class="btn btn-primary"/>

                    
                    <button name="saldo_cuenta_nueva" string="Saldo" context="{'date': date}" type="object" class="btn btn-primary" invisible='1' />



                    
                </footer>
            </form>
            </field>
        </record>

        <record id="bank_statemnet_report_action" model="ir.actions.act_window">
            <field name="name">Reporte de Conciliacion Bancaria</field>
            <field name="res_model">bank.statement.report</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="bank_statement_report_menu" action="bank_statemnet_report_action" parent="account_reports.account_reports_audit_reports_menu"/>
</odoo>