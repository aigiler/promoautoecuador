<?xml version="1.0" encoding="UTF-8"?>
<odoo>
        <record id="reporte_anticipo_form" model="ir.ui.view">
            <field name="name">reporte.anticipo.form</field>
            <field name="model">reporte.anticipo</field>
            <field name="arch" type="xml">
                <form string="Reporte de Anticipo">
                    <group>
                         <group col="2">

                            <field name="partner_id" required="1" domain="[('tipo', '=', 'socio')]">

                        </group>

                    </group>                        
                    <footer>
                        <button name="print_report_xls"
                                string="Imprimir Excel"
                                type="object"
                                class="oe_highlight" />
                        or
                        <button name="print_report_pdf"
                                string="Imprimir PDF"
                                type="object"
                                class="oe_highlight btn btn-danger" />
                        or                        
                        <button special="cancel"
                                string="_Cancel"
                                class="oe_link" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_reporte_anticipo" model="ir.actions.act_window">
            <field name="name">Anticipo</field>
            <field name="res_model">reporte.anticipo</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>



        <menuitem 
        id = "reporte_report_entregable_anticipo_menu"
        name = "Reporte Anticipo"  
        parent="menu_reporte" 
        sequence="1" 
        action="action_reporte_anticipo"/>


</odoo>
