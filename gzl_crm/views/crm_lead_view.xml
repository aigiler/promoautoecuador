<?xml version="1.0" encoding="utf-8"?>
<odoo>

     <record id="view_crm_lead_inherit_form" model="ir.ui.view">
        <field name="name">view.crm.lead.inherit.form</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <field name="is_won" invisible="1"/>
                <button name="crear_adjudicado" class="oe_highlight" string="Crear Adjudicado" type="object"  attrs="{'invisible': [('is_won', '=',False)]}"/>
                <button name="detalle_tabla_amortizacion" class="oe_highlight" string="Calcular Amortización" type="object" />
                <button name="crear_contrato" class="oe_highlight" string="Crear Contratos" type="object" />
            </xpath>
            
            <xpath expr="//label[@for='planned_revenue']" position="attributes">
                <attribute name="string">Monto del Plan</attribute>
            </xpath>

            <xpath expr="//notebook" position="before">
                <group string="Tabla de Amortización"> 
                    <group>
                        <field name="tasa_interes" string="Tasa de Interés (%)"/>
                        <field name="numero_cuotas" string="Número de Cuotas (meses)"/>
                        <field name="dia_pago"/>
                        <field name="tipo_contrato" options="{'no_create_edit': True, 'no_open': True}"/>
                    </group>
                    <field name="tabla_amortizacion"  nolabel="1">
                        <tree string="Tabla de Amortización" edit="false" create="false" delete="false">
                            <field name="oportunidad_id" invisible="1"/>
                            <field name="numero_cuota" />
                            <field name="fecha"/>
                            <field name="cuota"/>
                            <field name="capital"/>
                            <field name="interes"/>
                            <field name="saldo"/>
                            <field name="estado_pago"/>
                            <button name="pagar_cuota" class="oe_highlight" string="Pagar" type="object" attrs="{'invisible': [('estado_pago', '=','pagado')]}"/>
                        </tree>
                    </field>
                </group>
            </xpath>

            <xpath expr="//page[@name='lead']" position="after">
                <page name="contact" string="Contacto">
                    <group>
                        <group>
                            <field name="contacto_name"/>
                            <field name="contacto_cedula"/>
                            <field name="contacto_correo"/>
                        </group>
                        <group>
                            <field name="contacto_telefono"/>
                            <field name="contacto_domicilio"/>
                        </group>
                    </group>
                </page>
            </xpath>

        </field>
    </record>

</odoo>